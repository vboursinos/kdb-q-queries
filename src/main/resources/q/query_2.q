joinTable2: aj[`id;
    select from
        update id: id, sales: sales + 0, dummy: sales * age from
            (select from
                update age: age + 0 from
                    (select from
                        (aj[`id;
                            select from person where sales > 502,
                            age > 52; `id xkey (sale)
                        ])
                    ) where sales > 500, age > 50
            );
    `id xkey (sale)]